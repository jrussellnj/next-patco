<div class="container stops">
  <% @stations.each do |s| %>
    <div class="row justify-content-center no-gutters stop">
      <div class="col-1 text-right">
        <img src="/assets/pin.png" class="pin" />
      </div>

      <div class="col-2">
        <a href="/<%= s.slug %>/"><%= s.stop_name %></a>
      </div>
    </div>
  <% end %>
</div>
